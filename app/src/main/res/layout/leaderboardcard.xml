<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#00A86B"

            >
            <ImageView
                android:id="@+id/ID_leaderboard_rankno"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/ID_leaderboard_profilepic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/ID_leaderboard_username"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="CleanFreakz"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/ID_leaderboard_points"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:text="200"
                android:textSize="15dp"
                android:background="@drawable/sticker"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

