<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products"
    android:background="#00A86B"
    >

    <RelativeLayout android:layout_height="100dp"
        android:layout_width="match_parent"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView android:layout_height="90dp"
        android:layout_width="120dp"
        app:srcCompat="@drawable/reward"
        android:padding="4dp"
        android:id="@+id/imageView2"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewDesc"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="YOUR POINTS ARE"
        android:layout_toRightOf="@id/imageView2"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="150" android:layout_toRightOf="@id/imageView2"
        android:layout_marginLeft="80dp"
        android:textSize="40sp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewDesc"/>

</RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/recyclerView"
        android:layout_marginTop="120dp"/>


</android.support.constraint.ConstraintLayout>